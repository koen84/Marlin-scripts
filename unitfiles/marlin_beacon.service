[Unit]
Description=marlin_beacon
After=network-online.target

[Service]
User=marlin
WorkingDirectory=/home/marlin/
ExecStart=/home/marlin/marlin/marlin_beacon.sh
StandardOutput=journal
StandardError=journal
Restart=always
RestartSec=3
StartLimitInterval=0
LimitNOFILE=65536
LimitNPROC=65536

[Install]
WantedBy=multi-user.target
